<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".screens.splash.NTDViewSplashActivity">

    <ImageView
        android:id="@+id/imageLearnPiano"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/gifSplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_21sdp"
        android:fontFamily="@font/nunito_medium"
        android:text="@string/learn_piano"
        android:textColor="@color/color_201A25"
        android:textFontWeight="790"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="@id/imageLearnPiano"
        app:layout_constraintStart_toStartOf="@id/imageLearnPiano"
        app:layout_constraintTop_toBottomOf="@id/imageLearnPiano" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifSplash"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:src="@drawable/splash_gif"
        app:layout_constraintBottom_toTopOf="@+id/tvAds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_44sdp"
        android:fontFamily="@font/nunito_medium"
        android:text="@string/tite_splash"
        android:textColor="@color/color_201A25"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gifSplash"
        app:layout_constraintStart_toStartOf="@id/gifSplash" />

</androidx.constraintlayout.widget.ConstraintLayout>
